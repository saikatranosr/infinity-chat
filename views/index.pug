doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Infinity Chat - The Real Chatroom by Saikat
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
  link(rel='stylesheet' href='/css/style.css')
  
nav.noselect
  div.titleContainer
    img.logo(src='/media/logo.png' alt='')
    p#title Infinity Chat
  div
    span.material-icons#more-menu more_vert
#main
  #users.noselect
  
  .chatBox.noselect
    .container
      #goToEnd
        span.material-icons#goToEndBtn arrow_downward
      form.send#send-container(action='#')
        input.noselect#messageInp(type='text' autocomplete='off' name='messageInp' placeholder='Type a message...')
        button#sendBtn(type='submit')
          span.material-icons send

#loadingScreen.over.noselect
  img(src='/media/logo.png' alt='')
  p Loading...
  
#myPrompt.over.noselect
  img(src='/media/logo.png' alt='')
  form.content#nameForm
    label(for='nameInp') Enter your name
    input.inp#nameInp(type='text' autocomplete='off')
    button.btn.btn-1#nameBtn(type='submit') OK
    
script(src="/socket.io/socket.io.js")
script(src='/js/connection.js')
script(src='/js/main.js')